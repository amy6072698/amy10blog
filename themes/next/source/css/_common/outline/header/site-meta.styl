.site-meta {
  flex-grow: 1;
  text-align: center;

  +mobile() {
    text-align: center;
  }
}

// custom
.custom-logo-image {
  // margin-top: 20px;
  margin-bottom: 10px;
  width: 80px;
  opacity: 1;
  top: 0px;

  +tablet-mobile() {
    // display: none;
    width: 32px;
    margin: 0 10px 0 0;
  }
}

.brand {
  border-bottom: 0;
  color: var(--brand-color);
  display: inline-block;
  padding: $brand-padding;

  &:hover {
    color: var(--brand-hover-color);
  }

// custom
  +tablet-mobile() {
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

.site-title {
  font-family: $font-family-logo;
  font-size: $font-size-title;
  font-weight: normal;
  line-height: 1.5;
  margin: 0;
}

.site-subtitle {
  color: $subtitle-color;
  font-size: $font-size-subtitle;
  margin: $site-subtitle-margin;
}

.use-motion {
  .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
